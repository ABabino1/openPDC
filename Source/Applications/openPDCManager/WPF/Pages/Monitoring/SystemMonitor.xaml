<UserControl x:Class="openPDCManager.Pages.Monitoring.SystemMonitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
             mc:Ignorable="d" 
            >
    <StackPanel Orientation="Vertical">
        
        <StackPanel Orientation="Horizontal">
            <Button Content="Add Freq Pt" x:Name="AddFrequency" Click="AddFrequency_Click" Margin="5"/>
            <Button Content="Add PA Pt" x:Name="AddPhaseAngle" Click="AddPhaseAngle_Click" Margin="5"/>
            <Button Content="Remove Freq Pt" x:Name="RemoveFrequency" Click="RemoveFrequency_Click" Margin="5"/>
            <Button Content="Remove PA Pt" x:Name="RemovePhaseAngle" Click="RemovePhaseAngle_Click"  Margin="5"/>
        </StackPanel>
        <d3:ChartPlotter Name="plotter" Background="Transparent" Height="600" Width="900">
        </d3:ChartPlotter>
    </StackPanel>
</UserControl>
