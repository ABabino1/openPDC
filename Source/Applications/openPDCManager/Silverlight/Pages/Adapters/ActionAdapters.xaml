<navigation:Page x:Class="openPDCManager.Silverlight.Pages.Adapters.ActionAdapters" 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           mc:Ignorable="d"
           xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
           xmlns:adapterControl="clr-namespace:openPDCManager.Silverlight.UserControls"
           Title="Custom Action Adapters">
    <Grid x:Name="LayoutRoot">
        <Border Style="{StaticResource PortletBorderStyle}">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Custom Action Adapters" Foreground="#FFFFFFFF" HorizontalAlignment="Center" FontSize="{StaticResource LargerTextSize}" Padding="5" />
                <Border Background="{StaticResource PortletBackgroundBrush}">
                    <adapterControl:AdapterUserControl x:Name="ActionAdapterControl" />
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</navigation:Page>
