<Window x:Class="ConfigurationSetupUtility.AdvancedSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AdvancedSettingsWindow" Height="200" Width="450" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="20,10">
            <Label Content="Connection String:" VerticalAlignment="Center" />
            <TextBox Height="23" Name="m_connectionStringTextBox" Width="240" VerticalAlignment="Center" />
        </StackPanel>
        <CheckBox Content="Encrypt connection strings" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Margin="20,10" Name="m_encryptCheckBox" />
        <StackPanel HorizontalAlignment="Right" Grid.Row="2" Orientation="Horizontal">
            <Button Content="OK" Height="23" Width="75" Click="OkButton_Click" IsDefault="True" />
            <Button Content="Cancel" Height="23" Width="75" Margin="10" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
